@{
    ViewData["title"] = "User list";
 
}

<h3>List User</h3>
<a asp-area="Admin" asp-action="Create" asp-controller="User">Add User</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
         
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
                <td>@Html.Raw(item.Email)</td>
                <td>@item.Phone</td>
                
                <td>
                    <a asp-action="Edit" asp-controller="User" class="btn btn-warning btn-sm" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="User" class="btn btn-danger btn-sm confirmDeletion" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
