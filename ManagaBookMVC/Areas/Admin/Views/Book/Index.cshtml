@{
    ViewData["title"] = "Book list";
}

<h3>List Book</h3>
<a asp-area="Admin" asp-action="Create" asp-controller="Book">Create Book</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
          
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Author</td>
             
             
                <td>
                    <a asp-action="Edit" asp-controller="Book" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Book" class="btn btn-danger btn-sm confirmDeletion" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>